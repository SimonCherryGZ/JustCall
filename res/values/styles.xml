<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="ActivityAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_up_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_up_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_down_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_down_out</item>
    </style>
    
    <style name="AnimActivityTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowAnimationStyle">@style/ActivityAnim</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Holo.Light">
        <item name="android:textColor">#db4c5a</item> 
        <item name="android:dividerHeight">1dip</item> 
		<item name="android:divider">#db4c5a</item> 
	</style> 

</resources>
